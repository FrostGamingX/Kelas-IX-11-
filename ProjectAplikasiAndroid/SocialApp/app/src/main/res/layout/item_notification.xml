<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView android:id="@+id/iv_notif_icon" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/ic_notification" />
    <TextView android:id="@+id/tv_notif_text" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="User liked your post" />
    <TextView android:id="@+id/tv_timestamp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2h ago" />
</LinearLayout>