<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_order_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ringkasan Pesanan"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Tambahkan RecyclerView untuk list item jika perlu -->

    <TextView
        android:id="@+id/tv_total_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: Rp 0"
        app:layout_constraintTop_toBottomOf="@id/tv_order_summary"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Alamat Pengiriman"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@id/tv_total_order"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Spinner
        android:id="@+id/spinner_payment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_confirm_order"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Konfirmasi Pesanan"
        android:backgroundTint="#FF5722"
        app:layout_constraintTop_toBottomOf="@id/spinner_payment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>