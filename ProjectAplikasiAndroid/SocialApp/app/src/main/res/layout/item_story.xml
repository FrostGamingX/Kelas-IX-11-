<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView android:id="@+id/iv_story_image" android:layout_width="match_parent" android:layout_height="400dp" android:scaleType="centerCrop" />
    <TextView android:id="@+id/tv_story_username" android:text="Username" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    <TextView android:id="@+id/tv_timestamp" android:text="2h ago" android:layout_width="wrap_content" android:layout_height="wrap_content" />
</LinearLayout>